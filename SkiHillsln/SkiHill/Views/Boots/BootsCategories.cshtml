@using System.Text.RegularExpressions;

<div class="wrapper three-cols col-md-offset-1">

    <a href="@Url.Action("Index", "Boots", new {categ= @DAL.Models.BootCategory.CrossCountry.ToString() })">
        <div id="cross-boots" class="prod-images"></div>@string.Join(" ", Regex.Split(DAL.Models.BootCategory.CrossCountry.ToString(), @"(?<!^)(?=[A-Z])"))
